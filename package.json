{
  "name": "emperor-server",
  "version": "1.0.0",
  "description": "Express.js server for emperor shop",
  "main": "index.js",
  "scripts": {
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create",
    "test-ci": "NODE_ENV=testci LOG_LEVEL=off jest --verbose --coverage --detectOpenHandles --maxWorkers=1 --testTimeout=10000 --forceExit",
    "pretest-ci": "NODE_ENV=testci npm run db:reset",
    "test-dev": "NODE_ENV=test LOG_LEVEL=off PORT=3005 jest --verbose --watchAll --coverage --detectOpenHandles --maxWorkers=1 --testTimeout=10000",
    "pretest-dev":"NODE_ENV=test npm run db:reset",
    "test-cd": "NODE_ENV=testcd jest --verbose --coverage --detectOpenHandles --maxWorkers=1 --testTimeout=10000 --forceExit",
    "dev": "nodemon ./src/index.js",
    "start": "NODE_ENV=production node src/server.js",
    "start-dev": "NODE_ENV=production nodemon src/server.js",
    "build": "echo Build the application phase ....!!!"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thai-Programmers-in-USA/Emperor-Server.git"
  },
  "keywords": [
    "Node",
    "Express",
    "PostgreSQL",
    "Sequelize",
    "Socket.io"
  ],
  "author": "Thai programmer dreamteam",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Thai-Programmers-in-USA/Emperor-Server/issues"
  },
  "homepage": "https://github.com/Thai-Programmers-in-USA/Emperor-Server#readme",
  "dependencies": {
    "aws-sdk": "^2.874.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "multer": "^1.4.2",
    "npm": "^7.11.1",
    "pg": "^8.5.1",
    "pm2": "^4.5.5",
    "sequelize": "^6.5.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "node-mocks-http": "^1.10.1",
    "nodemon": "2.0.7",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.3"
  }
}
